<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_item"
    card_view:cardElevation="@dimen/offset_small"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/offset_normal"
    android:layout_marginRight="@dimen/offset_normal"
    android:layout_marginTop="@dimen/offset_small"
    android:layout_marginBottom="@dimen/offset_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image"
            android:layout_width="54dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_mime_folder"
            android:padding="@dimen/offset_normal"/>

        <TextView
            android:id="@+id/file_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center|start"
            android:padding="@dimen/offset_normal"
            android:textColor="@color/colorText"
            android:textSize="@dimen/text_normal"
            android:layout_weight="1"
            tools:text="Футбол Красноярск" />

        <ImageView
            android:id="@+id/changes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/offset_big"
            android:src="@drawable/ic_changes" />

    </LinearLayout>

</android.support.v7.widget.CardView>